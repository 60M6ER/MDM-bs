{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "jsx": "preserve",
    "skipLibCheck": true,
    "types": ["vite/client", "quasar"]
  },
  "include": ["src", "src/**/*.vue", "env.d.ts"]
}